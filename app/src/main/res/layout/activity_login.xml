<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.croquis.zigzag_shop_login.LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="2dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/_000000"
            android:textSize="16sp"/>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:background="#d3d3d3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/toolbar"/>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/toolbar"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:context="com.croquis.zigzag_shop_login.LoginActivity"
            tools:showIn="@layout/activity_login">

            <ImageView
                android:id="@+id/img_login"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginBottom="35dp"
                app:srcCompat="@drawable/img_login"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_intro_0"/>

            <TextView
                android:id="@+id/tv_intro_0"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/login_intro_0"
                android:textColor="@color/_000000"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_intro_1"/>

            <TextView
                android:id="@+id/tv_intro_1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:maxLines="3"
                android:text="@string/login_intro_1"
                android:textColor="#BDBDBD"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/shop"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintTop_toBottomOf="@+id/tv_intro_1"
                app:layout_constraintLeft_toLeftOf="@id/btn_login"
                app:layout_constraintBottom_toTopOf="@+id/separator_0"/>

            <EditText
                android:id="@+id/edit_shop_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:inputType="textEmailAddress"
                android:textSize="12sp"
                android:singleLine="true"
                android:layout_marginLeft="12dp"
                app:layout_constraintLeft_toRightOf="@+id/shop"
                app:layout_constraintRight_toRightOf="@+id/btn_login"
                app:layout_constraintTop_toTopOf="@+id/shop"
                app:layout_constraintBottom_toBottomOf="@+id/shop"/>

            <View
                android:id="@+id/separator_0"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="#BDBDBD"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintLeft_toLeftOf="@+id/btn_login"
                app:layout_constraintRight_toRightOf="@+id/btn_login"
                app:layout_constraintBottom_toTopOf="@+id/pwd" />

            <ImageView
                android:id="@+id/pwd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_pwd"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/separator_1"
                app:layout_constraintLeft_toLeftOf="@+id/shop"
                app:layout_constraintRight_toRightOf="@+id/shop"/>

            <EditText
                android:id="@+id/edit_user_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textSize="12sp"
                android:singleLine="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintLeft_toRightOf="@+id/pwd"
                app:layout_constraintLeft_toLeftOf="@+id/edit_shop_id"
                app:layout_constraintRight_toRightOf="@id/btn_login"
                app:layout_constraintTop_toTopOf="@+id/pwd"
                app:layout_constraintBottom_toBottomOf="@+id/pwd"/>

            <View
                android:id="@+id/separator_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:background="#BDBDBD"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintLeft_toLeftOf="@+id/btn_login"
                app:layout_constraintRight_toRightOf="@+id/btn_login"
                app:layout_constraintBottom_toTopOf="@+id/autologin_0"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_auto_login_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="autologin_0, autologin_1, img_agreement_check" />

            <TextView
                android:id="@+id/autologin_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autologin_0"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:layout_marginBottom="20dp"
                app:layout_constraintLeft_toLeftOf="@id/btn_login"
                app:layout_constraintBottom_toTopOf="@+id/btn_login"/>

            <TextView
                android:id="@+id/autologin_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/autologin_1"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@+id/autologin_0"
                app:layout_constraintBottom_toBottomOf="@+id/autologin_0"
                app:layout_constraintLeft_toRightOf="@+id/autologin_0" />

            <ImageView
                android:id="@+id/img_agreement_check"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/agree_unchecked_selector"
                android:clickable="true"
                app:layout_constraintRight_toRightOf="@+id/btn_login"
                app:layout_constraintTop_toTopOf="@+id/autologin_0"
                app:layout_constraintBottom_toBottomOf="@+id/autologin_0"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="@string/login"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:elevation="2dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/find_id_pwd"/>

            <com.croquis.zigzag_shop_login.view.LoadingIndicatorView
                android:id="@+id/progress_spin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/btn_login" />

            <TextView
                android:id="@+id/find_id_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="@string/find_id_pwd"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/auto_login_succeed_terms" />

            <View
                android:id="@+id/blur_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:alpha="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/shop"/>

            <TextView
                android:id="@+id/auto_login_succeed_terms"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#e9e9e9"
                android:text="@string/autologin_terms_success"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
